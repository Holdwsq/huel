<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/two_shipinhome_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/two_shipincart_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/retrun"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/two_shipincart_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mycart1"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/two_shipinBanner_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/two_banner_a"
                    />

                <ImageView
                    android:id="@+id/two_shipinBanner2_img"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/two_banner_b"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/two_shipinBanner3_img"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/two_banner_c"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/two_banner_d"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>



