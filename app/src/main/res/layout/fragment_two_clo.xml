<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/titleBgColor">

        <ImageView
            android:id="@+id/two_cloreturn_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/retrun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="爱逛街 精选"
            android:gravity="center"
            android:textSize="@dimen/title_size"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f25de3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/two_clo_banner"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/twoclo_menu_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="好物推荐"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/menu_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#e6e9ea"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoclo_menu_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="人气单品"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/menu_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#e6e9ea"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoclo_menu_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="今日新品"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/menu_line_3"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#e6e9ea"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>

            <GridView
                android:id="@+id/clothes_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnWidth="90dp"
                android:background="@color/bg"
                android:horizontalSpacing="2dp"
                android:numColumns="2"
                android:verticalSpacing="2dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


