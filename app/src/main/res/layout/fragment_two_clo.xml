<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#33ccff">

            <ImageView
                android:id="@+id/two_cloreturn_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/retrun"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/two_cloreturn_img"
                android:gravity="center_vertical"
                android:text="爱逛街 精选"
                android:textSize="18sp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f25de3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/two_clo_banner1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/two_clo_banner2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/twoclo_menu_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="好物推荐"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/menu_line_1"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#f00" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoclo_menu_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="人气单品"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/menu_line_2"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#f00"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoclo_menu_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="今日新品"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/menu_line_3"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#f00"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <GridView
                    android:id="@+id/clothes_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnWidth="90dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:verticalSpacing="2dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


