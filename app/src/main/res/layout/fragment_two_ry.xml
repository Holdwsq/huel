<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#33ccff">

            <ImageView
                android:id="@+id/two_riyohome_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/retrun"/>

            <EditText
                android:id="@+id/two_riyong_et"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/two_riyocart_img"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/mycart1"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/two_riyobanner1_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/two_riyong_banner1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"

                    >
                    <LinearLayout
                        android:id="@+id/two_riyong_yhly"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/two_riyokouqi_img"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_riyong_kouqiang"/>
                        <TextView
                            android:id="@+id/two_riykouqi_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:text="口腔护理"/>
                        <TextView
                            android:id="@+id/two_riyokq2mian1_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:text="买2免1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/two_riyong_yhly1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/two_riyopersor_img"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:layout_weight="1"
                            android:src="@drawable/two_riyong_gerenhuli"/>
                        <TextView
                            android:id="@+id/two_riyoperson_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:text="个人护理"/>
                        <TextView
                            android:id="@+id/two_riyoper2mian1_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:text="买2免1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/two_riyomeiz_imag"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_riyong_meizhuang"/>
                        <TextView
                            android:id="@+id/two_riyomeiz_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"
                            android:text="美容美妆"/>
                        <TextView
                            android:id="@+id/two_riyomeiz2mian1_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:text="买2免1"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/two_riyoxiangb_img"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/two_riyoxiangb"/>
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_riyojieqi"
                            android:layout_weight="6"/>
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_riyowinter"
                            android:layout_weight="7.75"/>
                    </LinearLayout>

                </LinearLayout>
                <GridView
                    android:id="@+id/riyong_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="90dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:verticalSpacing="2dp" />



            </LinearLayout>
        </ScrollView>

    </LinearLayout>


