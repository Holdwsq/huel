<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/return_sc"/>
    <TextView
        android:id="@+id/sec_top1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="情人节约会装-男装主会场"
        android:textSize="20dp"
        android:gravity="center"
        />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/share"/>
        <ImageView
            android:id="@+id/sec_top2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sec_top1"
            android:background="#22da4a"
            android:src="@drawable/sec_top2"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/sec_top3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sec_top2"
            android:src="@drawable/sec_top3"
            android:scaleType="fitXY"
            />
<LinearLayout
    android:id="@+id/sec_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sec_top3"
    android:weightSum="2">
        <ImageView
            android:id="@+id/sec_top4"
            android:layout_width="50dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sec_top3"
            android:background="#206cb4"
            android:layout_weight="1"
            android:src="@drawable/sec_top4"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/sec_top5"
            android:layout_width="50dp"
            android:layout_height="250dp"
            android:layout_toRightOf="@+id/sec_top4"
            android:layout_weight="1"
            android:background="#8c6060"
            android:src="@drawable/sec_top5"
            android:scaleType="fitXY"
            />


</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sec_lin"
            android:weightSum="2">
            <ImageView
                android:id="@+id/sec_top6"
                android:layout_width="50dp"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sec_top3"
                android:background="#206cb4"
                android:layout_weight="1"
                android:src="@drawable/sec_top6"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/sec_top7"
                android:layout_width="50dp"
                android:layout_height="250dp"
                android:layout_toRightOf="@+id/sec_top4"
                android:layout_weight="1"
                android:background="#8c6060"
                android:src="@drawable/sec_top7"
                android:scaleType="fitXY"
                />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</LinearLayout>
