            <TextView
                android:id="@+id/lunbo_name3"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/lunbo_img3"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/lunbo_img3"
                android:layout_toRightOf="@+id/lunbo_img3"
                android:text="通勤灰色裤女小脚直筒休闲裤七分"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/lunbi_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lunbo_name3"
                android:layout_alignStart="@+id/lunbo_name3"
                android:layout_below="@+id/lunbo_name3"
                android:text="月销1474笔"/>

            <TextView
                android:id="@+id/lunbo_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lunbo_img3"
                android:layout_alignLeft="@+id/lunbi_num3"
                android:layout_alignStart="@+id/lunbi_num3"
                android:layout_gravity="bottom"
                android:text="￥88"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lunbo_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lunbo_3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lunbo_img4"
                android:layout_width="80dp"
                android:layout_height="80dp"
