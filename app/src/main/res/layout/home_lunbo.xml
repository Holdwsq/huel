                android:layout_alignStart="@+id/lunbo_name2"
                android:layout_below="@+id/lunbo_name2"
                android:text="月销98笔"/>

            <TextView
                android:id="@+id/lunbo_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lunbo_img2"
                android:layout_alignLeft="@+id/lunbi_num2"
                android:layout_alignStart="@+id/lunbi_num2"
                android:layout_gravity="bottom"
                android:text="￥199.00"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
