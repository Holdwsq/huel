<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lunbo_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#33ccff">

            <ImageButton
                android:id="@+id/home_lunbo_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/return_home"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="精品推荐"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/share"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lunbo_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lunbo_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lunbo_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/lunbo_img1"/>

            <TextView
                android:id="@+id/lunbo_name1"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/lunbo_img1"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/lunbo_img1"
                android:layout_toRightOf="@+id/lunbo_img1"
                android:text="法国男士香水持久淡香 专柜正品"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/lunbi_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lunbo_name1"
                android:layout_alignStart="@+id/lunbo_name1"
                android:layout_below="@+id/lunbo_name1"
                android:text="月销980笔"/>

            <TextView
                android:id="@+id/lunbo_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lunbo_img1"
                android:layout_alignLeft="@+id/lunbi_num1"
                android:layout_alignStart="@+id/lunbi_num1"
                android:layout_gravity="bottom"
                android:text="￥128.00"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lunbo_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lunbo_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lunbo_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/lunbo_img2"/>

            <TextView
                android:id="@+id/lunbo_name2"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/lunbo_img2"
