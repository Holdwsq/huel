<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/two_papers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/two_paper_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/two_paper_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/retrun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/two_cloreturn_img"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="纸 间 幸 福"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/two_paper_top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#cfdced">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/paperto"/>
        <com.hueljk.ibeacon.utils.MyGridView
            android:layout_marginTop="620px"
            android:id="@+id/paper_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:background="#cfdced">
        </com.hueljk.ibeacon.utils.MyGridView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
