<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/two_wine"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg">
    <RelativeLayout
        android:id="@+id/two_wine_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#33ccff">

        <ImageView
            android:id="@+id/two_wine_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/retrun"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="陈年佳酿，与众不同"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_wine_top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff">

        <ImageView
            android:id="@+id/wine_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img2"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img3"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img4"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img5"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img6"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img7"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/wine_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img8"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img9"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_wine_img10"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        </RelativeLayout>
<GridView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


</GridView>
    </ScrollView>
</RelativeLayout>

