<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dh_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/category_img"
                android:layout_width="39dp"
                android:layout_height="45dp"
                android:layout_weight="0.06 "
                android:src="@drawable/category" />

            <EditText
                android:id="@+id/SearchEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.93"
                android:drawableLeft="@drawable/search"
                android:hint="请输入搜索内容" />


            <ImageView
                android:id="@+id/message_img"
                android:layout_width="39dp"
                android:layout_height="45dp"
                android:layout_weight="0.06"
                android:src="@drawable/message" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:background="@color/colorAccent"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />

                <LinearLayout
                    android:id="@+id/category_ly"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/clothes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableTop="@drawable/fuzhuang"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="服装" />

                    <TextView
                        android:id="@+id/riyong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableTop="@drawable/jiaju"
                        android:gravity="center"
                        android:layout_weight="1"

                        android:text="百货" />

                    <TextView
                        android:id="@+id/shipin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableTop="@drawable/shipin"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="食品" />

                    <TextView
                        android:id="@+id/shengxian_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:drawableTop="@drawable/shengxian"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="生鲜" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/youhui_ly"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/zp_ly"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#fee1dd"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/zhipin_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="纸品迎新年" />

                        <ImageView
                            android:id="@+id/zhipin_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/zhipin" />

                        <TextView
                            android:id="@+id/bk1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="爆款直降" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/meijiu_ly"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#fee1dd"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/meijiu_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="品质美酒" />

                        <ImageView
                            android:id="@+id/meijiu_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/meijiu" />

                        <TextView
                            android:id="@+id/bk2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="爆款直降" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ph_ly"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="#fee1dd"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/penghua_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:text="休闲膨化" />

                        <ImageView
                            android:id="@+id/penghua_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/penghua" />

                        <TextView
                            android:id="@+id/wuzhe_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="买2免1" />
                    </LinearLayout>
                </LinearLayout>

                <GridView
                    android:id="@+id/product_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="90dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="2"
                    android:verticalSpacing="2dp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</android.support.v4.widget.SwipeRefreshLayout>
