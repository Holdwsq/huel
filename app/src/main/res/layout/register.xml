<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/register_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/retrun"
            />
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textSize="@dimen/title_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/register_img"
        android:layout_below="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/register_ly"
        android:layout_below="@+id/register_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext"
            android:hint="用户名"
            android:maxLines="1"
            android:textColorHint="#b9b7b7"
            android:padding="5dip"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/re_name_clear"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/register_username"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/clear"
            android:visibility="invisible"
            />
        <EditText
            android:id="@+id/register_pass"
            android:layout_below="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#b9b7b7"
            android:padding="5dip"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/re_pass_clear"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/register_username"
            android:layout_alignRight="@+id/register_pass"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:src="@drawable/clear"
            />
        <EditText
            android:id="@+id/register_repass"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/register_pass"
            android:layout_centerInParent="true"
            android:hint=" 确认密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColorHint="#b9b7b7"
            android:background="@drawable/rounded_edittext"
          />
        <ImageView
            android:id="@+id/re_repass_clear"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/register_pass"
            android:layout_alignRight="@+id/register_repass"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:src="@drawable/clear"
            />
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/register_repass"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape2"
            android:gravity="center"/>
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册即同意《用户协议》和《版权声明》"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        />

</RelativeLayout>
