<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/bg"
    >

    <ImageView
        android:id="@+id/itemProImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/shangpin1"/>

    <TextView
        android:id="@+id/itemDecText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemProImage"
        android:maxLines="2"
        android:text="dawerasdfsdfsdfdsdfsfddddddddddds描述"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/itemNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDecText"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:text="销售数量"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/itemPriText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemNumText"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:text="商品价格"
        android:textColor="#f52516"
        android:textSize="11sp"/>

    <ImageView
        android:id="@+id/itemCartImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/itemNumText"
        android:layout_below="@id/itemProImage"
        android:src="@drawable/cart"/>

</RelativeLayout>
