<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="@dimen/title_height"
        >
        <ImageView
            android:id="@+id/publish_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/post_close_click"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:layout_centerInParent="true"
            android:textSize="@dimen/title_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="#eef1f5"
            android:layout_marginBottom="60dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/publish_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/publish_title"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColorHint="#dadada"
                            android:textSize="15sp"
                            android:typeface="sans"
                            android:hint="标题 品类品牌型号都是买家喜欢搜索的"
                            />
                        <com.hueljk.ibeacon.view.MyEditText
                            android:id="@+id/publish_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="描述一下商品的细节或故事"
                            android:height="120dp"
                            android:textColorHint="#dadada"
                            android:textSize="15sp"
                            android:typeface="sans"
                            android:paddingStart="5dp"
                            android:background="@null"
                            android:gravity="left|top"
                            android:scrollbars="none"
                            android:inputType="textMultiLine"
                            />
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg"
                            android:orientation="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <com.goyourfly.multi_picture.MultiPictureView
                                android:id="@+id/multiple_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:editable="true"
                                app:max="9"
                                app:ratio="1"
                                app:space="6dp"
                                app:span="4" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="11dp"
                                android:layout_height="14dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/post_location_icon_black"/>
                            <TextView
                                android:id="@+id/publish_school"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:layout_marginStart="6dp"
                                android:typeface="sans"
                                android:layout_gravity="center_vertical"
                                android:text="河南财经政法大学"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/bg"
                    android:orientation="vertical"
                    android:layout_below="@+id/publish_detail"
                    android:layout_marginBottom="10dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:typeface="sans"
                            android:textColor="#262626"
                            android:text="价格"
                            android:textSize="15sp"/>
                        <EditText
                            android:id="@+id/publish_price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColorHint="#dadada"
                            android:textSize="15sp"
                            android:paddingStart="15dp"
                            android:inputType="number|numberDecimal"
                            android:typeface="sans"
                            android:hint="输入宝贝的价格"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:typeface="sans"
                            android:textColor="#262626"
                            android:text="分类"
                            android:textSize="15sp"/>
                        <EditText
                            android:id="@+id/publish_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColorHint="#dadada"
                            android:textSize="15sp"
                            android:paddingStart="15dp"
                            android:typeface="sans"
                            android:hint="宝贝分类"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="60dp">
            <Button
                android:id="@+id/publish_bt"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6ed1e2b"
                android:text="确定发布"
                android:typeface="sans"
                android:textColor="#ffff"
                android:textSize="16sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
